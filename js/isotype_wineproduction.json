{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"view": {"stroke": "transparent"}},
    "height": 500,
    "width": "container",
    "background": "transparent",
    "data": {
      "url": "https://raw.githubusercontent.com/itsashleyooi/AllAboutAlcoholandWine/main/data/productions_isotype.csv"
    },
    "params":[
        {
            "name": "Year_Selection",
            "value": 2016,
            "bind":{
                "input": "range",
                "min": 2012,
                "max": 2016,
                "step": 1,
                "name": "Year: "
            }
        }

      ],
    "transform": [
      {
        "calculate": "{'Italy': 'ðŸ‡®ðŸ‡¹', 'France': 'ðŸ‡«ðŸ‡·', 'Spain': 'ðŸ‡ªðŸ‡¸', 'United States': 'ðŸ‡ºðŸ‡¸', 'Australia': 'ðŸ‡¦ðŸ‡º', 'China': 'ðŸ‡¨ðŸ‡³', 'South Africa': 'ðŸ‡¿ðŸ‡¦', 'Chile': 'ðŸ‡¨ðŸ‡±', 'Argentina': 'ðŸ‡¦ðŸ‡·', 'Germany': 'ðŸ‡©ðŸ‡ª', 'Austria':'ðŸ‡¦ðŸ‡¹'}[datum.Country]",
        "as": "emoji"
      },
      {"window": [{"op": "rank", "as": "rank"}], "groupby": ["Year", "Country"]},
      {"filter":"datum.Year == Year_Selection"}
    ],
    
    "encoding": {
      "x": {"field": "rank", "type": "ordinal", "axis": null, "sort": null},
      "y": {"field": "Country", "type": "nominal"},
      "text": {"field": "emoji", "type": "nominal"},
      "size": {"value": 50},
      "tooltip":[
        {"field": "Year", "type": "nominal"},
        {"field": "Country", "type": "nominal"}
      ]
    }, 
      "layer": [
          {
              "mark": {"type": "text", "baseline": "middle"}
          },
          {
              "transform": [
                  {"filter": "datum.Country == 'Austria'"}
                ],
                "mark":{
                  "type":"text",
                  "align": "left",
                  "baseline": "middle",
                  "dx": 900,
                  "dy": 0,
                  "fontSize": 8,
                  "limit": 220,
                  "fontStyle": "italic",
                  "fontWeight": "bold"
                },
                
                "encoding": {
                  "text":{"field":"Year",  "type":"nominal"},
                  "color":{"value":"#D3D3D3"}
                }
          }
      ]
  }