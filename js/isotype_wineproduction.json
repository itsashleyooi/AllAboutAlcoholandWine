{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "background": "transparent",
    "config": { "view": { "stroke": "transparent" } },
    "height": 500,
    "params": [
        {
            "name": "Year_Selection",
            "value": 2016,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2016,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/itsashleyooi/AllAboutAlcoholandWine/main/data/production_isotype.csv"
    },
    "transform": [
        {
