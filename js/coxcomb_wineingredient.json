{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Ingredients used to make wine.",
    "width": 460,
    "height": 420,
    "data": {
      "values": [
        { "Category": "Water", "value": 28, "percentage": "70%" },
        { "Category": "Ethanol", "value": 8, "percentage": "20%" },
        { "Category": "Other (Sugars, Acids, Phenols)", "value": 4, "percentage": "10%" }
      ]
    },
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 20, "stroke":"null"}
