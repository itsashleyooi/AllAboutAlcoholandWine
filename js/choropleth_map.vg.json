{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "projection": {"type": "equirectangular"},
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/itsashleyooi/AllAboutAlcoholandWine/main/js/world.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "#C0C0C0", "stroke": "whitesmoke"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "params": [
        {"name": "highlight", "select": {"type": "point", "on": "mouseover"}}
      ],
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/itsashleyooi/AllAboutAlcoholandWine/main/data/alcohol_consumptions.csv"
            },
            "key": "Country",
            "fields": ["alcohol_per_capita"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#030303",
        "strokeWidth": 0.2,
        "cursor": "pointer"
      },
      "encoding": {
        "color": {
          "field": "alcohol_per_capita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [2, 4, 6, 8, 10],
            "range": [
              "#feedde",
              "#fdd0a2",
              "#fdae6b",
              "#fd8d3c",
              "#e6550d",
              "#a63603"
            ]
          },
          "legend": {
            "title": "Consumption Per Capita",
            "titleLimit": 1000
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "alcohol_per_capita",
            "type": "quantitative",
            "title": "Alcohol Consumption Per Capita (in liters)",
            "format": ".2f"
          }
        ],
        "strokeWidth": {
          "condition": [{"param": "highlight", "empty": false, "value": 1}],
          "value": 0.3
        },
        "opacity": {"condition": {"param": "highlight", "value": 1}, "value": 0.5}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dy": -180,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "properties.NAME",
          "type": "nominal",
          "condition": [
            {
              "test": "datum['properties.NAME']== 'Czechia'",
              "value": [
                "Czechia has the highest alcohol consumption per capita."
              ]
            }
          ]
        },
        "color": {"value": "darkred"},
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME']== 'Czechia'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dy": 110,
        "dx": -200,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "properties.NAME",
          "type": "nominal",
          "condition": [
            {
              "test": "datum['properties.NAME']== 'Bangladesh'",
              "value": [
                "Bangladesh, Kuwait, Mauritania, Saudi Arabia and Somalia the lowest alcohol consumption per capita."
              ]
            }
          ]
        },
        "color": {"value": "darkred"},
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME']== 'Bangladesh'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dy": 70,
        "dx": 50,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "properties.NAME",
          "type": "nominal",
          "condition": [
            {
              "test": "datum['properties.NAME']== 'Australia'",
              "value": ["Australia ranked 36th in alcohol consumption."]
            }
          ]
        },
        "color": {"value": "darkred"},
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME']== 'Australia'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {"background": "#FBF9F7", "view": {"stroke": "transparent"}}
}