{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "background": "transparent",
    "config": {"view": {"stroke": "transparent"}},
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/itsashleyooi/AllAboutAlcoholandWine/main/data/wine_popular.csv"
    },
    "layer": [
      {
        "mark": {
          "type": "bar",
          "width": {"band": 0.09},
          "fillOpacity": 0.7,
          "cursor": "pointer"
        },
        "params": [
          {"name": "highlight", "select": {"type": "point", "on": "mouseover"}},
          {"name": "select", "select": "point"}
        ],
        "encoding": {
          "fillOpacity": {
            "condition": {"param": "select", "value": 1},
            "value": 0.3
          },
          "strokeWidth": {
            "condition": [
              {"param": "select", "empty": false, "value": 2},
              {"param": "highlight", "empty": false, "value": 1}
            ],
            "value": 0
          },
          "color": {
            "field": "Variety",
            "type": "nominal",
            "scale": {
              "type": "ordinal",
              "domain": [
                "Cabernet Franc",
                "Cabernet Sauvignon",
                "Merlot",
                "Pinot Noir",
                "Red Blend",
                "Syrah",
                "Chardonnay",
                "Riesling",
                "Sauvignon Blanc",
                "Zinfandel"
              ],
              "range": [
                "#FF0000",
                "#FF0000",
                "#FF0000",
                "#FF0000",
                "#FF0000",
                "#FF0000",
                "#DAA520",
                "#DAA520",
                "#DAA520",
                "#DAA520"
              ]
            },
            "legend": null
          },
          "y": {
            "field": "Occurrence",
            "title": "Number of Mentions in Wine Reviews",
            "type": "quantitative",
            "sort": "ascending",
            "axis": {"grid": false}
          },
          "x": {
            "field": "Variety",
            "title": "Variety of Wine",
            "type": "nominal",
            "axis": {"labelAngle": 0, "grid": false}
          },
          "tooltip": [
            {"field": "Variety", "title": "Variety of Wine", "type": "nominal"},
            {
              "field": "Occurrence",
              "title": "Number of Mentions in Wine Reviews",
              "type": "quantitative"
            }
          ]
        }
      },
      {
        "transform": [
          {"filter": "datum.Occurrence == 10340"},
          {
            "calculate": "'Pinot Noir is the worldâ€˜s most popular light-bodied red wine'",
            "as": "text_annotation"
          }
        ],
        "mark": {"type": "text", "align": "center", "dx": 2, "dy": -210},
        "encoding": {"text": {"field": "text_annotation"}}
      },
      {
        "transform": [
          {"filter": "datum.Occurrence == 8127"},
          {
            "calculate": "'Chardonnay is the most popular white wine'",
            "as": "text_annotation"
          }
        ],
        "mark": {"type": "text", "align": "center", "dx": -190, "dy": -130},
        "encoding": {"text": {"field": "text_annotation"}}
      },
      {
        "mark": {
          "size": 1900,
          "type": "circle",
          "color": "#DEDEDE",
          "fillOpacity": 2
        },
        "encoding": {
          "y": {
            "field": "Occurrence",
            "title": "Number of Mentions in Wine Reviews",
            "type": "quantitative",
            "sort": "ascending"
          },
          "x": {
            "field": "Variety",
            "type": "nominal",
            "axis": {"labelAngle": 0, "grid": false}
          },
          "tooltip": [
